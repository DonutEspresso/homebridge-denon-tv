{
  "pluginAlias": "DenonTv",
  "pluginType": "accessory",
  "footerDisplay": "This plugin works with Denon/Marantz AV Receivers series AVR-X which is available [here](https://github.com/grzegorz914/homebridge-denon-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "AV Receiver",
        "required": true
      },
      "host": {
        "title": "IP Address/Hostname",
        "type": "string",
        "required": true,
        "format": "hostname",
        "required": true
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "default": 8080,
        "maximum": 65535,
        "required": true
      },
      "speakerService": {
        "title": "Speaker service",
        "type": "boolean",
        "default": true
      },
      "inputs": {
        "title": "Inputs",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Input name",
              "type": "string",
              "default": "Polskie",
              "required": true
            },
            "reference": {
              "title": "Input reference",
              "type": "string",
               "default": "SAT/CBL",
              "required": true
            }
          }
        }
      }
    }
  }
}

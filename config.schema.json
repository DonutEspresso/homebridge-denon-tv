{
  "pluginAlias": "DenonTv",
  "pluginType": "platform",
  "footerDisplay": "This plugin works with Denon/Marantz AV Receivers series X which is available [here](https://github.com/grzegorz914/homebridge-denon-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "default": "AV Receiver",
              "required": true
            },
            "host": {
              "title": "IP Address",
              "type": "string",
              "default": "192.168.1.5",
              "required": true,
              "format": "hostname"
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "default": 8080,
              "maximum": 65535,
              "required": true
            },
            "zoneControl": {
              "title": "Zone control",
              "type": "integer",
              "default": 0,
              "maximum": 2,
              "oneOf": [
                {
                  "title": "Main zone",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Zone 1",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Zone 2",
                  "enum": [
                    2
                  ]
                }
              ],
              "required": true
            },
            "volumeControl": {
              "title": "Volume control",
              "type": "boolean",
              "default": false,
              "required": false
            },
            "switchInfoMenu": {
              "title": "Switch Info/Menu",
              "type": "boolean",
              "default": true,
              "required": true
            },
            "inputs": {
              "title": "Inputs",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Input name",
                    "type": "string",
                    "default": "DVD",
                    "required": true
                  },
                  "reference": {
                    "title": "Input reference",
                    "type": "string",
                    "default": "DVD",
                    "required": true
                  },
                  "type": {
                    "title": "Input type",
                    "type": "string",
                    "default": "SI",
                    "oneOf": [
                      {
                        "title": "Input",
                        "enum": ["SI"]
                      },
                      {
                        "title": "Surround mode",
                        "enum": ["MS"]
                      },
                      {
                        "title": "Digital input",
                        "enum": ["DC"]
                      }
                    ],
                    "required": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}